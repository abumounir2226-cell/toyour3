# هذا البلوك لإعادة التوجيه من HTTP إلى HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name royakids.shop www.royakids.shop;

    # ==> الجزء الخاص بالتحقق من Let's Encrypt على HTTP <==
    location /.well-known/acme-challenge/ {
        root /home/mounir/ahlam-store/public;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# هذا البلوك الرئيسي الخاص بالموقع
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name royakids.shop www.royakids.shop;

    # المتغيرات الخاصة بشهادة الحماية في CloudPanel
    {{ssl_certificate_key}}
    {{ssl_certificate}}

    # ==> الجزء الخاص بالتحقق من Let's Encrypt على HTTPS <==
    location /.well-known/acme-challenge/ {
        root /home/mounir/ahlam-store/public;
    }

    # ==========================================
    # ==> التعديل الجديد: رابط الصور الخارجية <==
    # ==========================================
    location /images/ {
        # هذا المسار بناءً على الصور التي أرسلتها
        # تأكد أن المجلد images موجود مباشرة داخل home/mounir
        alias /home/mounir/images/;
        
        # إعدادات لتحسين الأداء (الكاش)
        access_log off;
        expires max;
        
        # محاولة فتح الملف، وإذا لم يوجد يعطي خطأ 404
        try_files $uri $uri/ =404;
    }

    # ==> إعدادات تطبيق Next.js <==
    location / {
        proxy_pass http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}